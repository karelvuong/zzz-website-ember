<div class="page page--posts">
  <div class="container">
    <div class="sub-section">
      <h4 class="text-center">Written by Me</h4>

      <ul class="post-list">
        <h5 class="post-list-heading">Posts on {{#link-to 'posts'}}karel.ca{{/link-to}}</h5>
        {{#each post in model.posts}}
        <li class="post-list-item row">
          {{#link-to post.url class='post-list-item-title'}}{{post.title}}{{/link-to}}
          <div class="post-list-item-meta">
            {{#if post.tags}}
            <ul class="post-list-item-tags">
              {{#each tag in post.tags}}
              <li class="post-list-item-tag">{{tag}}</li>
              {{/each}}
            </ul>
            {{/if}}
            <p class="post-list-item-date">{{post.date}}</p>
          </div>
        </li>
        {{/each}}
      </ul>

      <ul class="post-list">
        <h5 class="post-list-heading">Answers on <a href="https://quora.com/Karel-Vuong">Quora</a></h5>
        <p class="post-list-text">Question titles may have been shortened and rephrased.</p>

        {{#each article in model.answers}}
        <li class="post-list-item row">
          <a class="post-list-item-title" href="{{article.url}}">{{article.title}}</a>

          <div class="post-list-item-meta">
            {{#if article.tags}}
            <div class="post-list-item-tags">
              {{#each tag in article.tags}}
              <strong class="post-list-item-tag">{{tag}}</strong>
              {{/each}}
            </div>
            {{/if}}

            <p class="post-list-item-date">{{article.date}}</p>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="sub-section">
      <h4 class="text-center">Written by Others</h4>

      <ul class="post-list">
        {{#each article in model.articles}}
        <li class="post-list-item row">
          <a class="post-list-item-title" href="{{article.url}}"><strong>{{article.organization}}</strong> - {{article.title}}</a>

          <div class="post-list-item-meta">
            {{#if article.tags}}
            <div class="post-list-item-tags">
              {{#each tag in article.tags}}
              <strong class="post-list-item-tag">{{tag}}</strong>
              {{/each}}
            </div>
            {{/if}}

            <p class="post-list-item-date">{{article.date}}</p>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

  {{outlet}}
</div>
